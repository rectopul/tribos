$button 
    display: flex 
    justify-content: center 
    align-items: center
    min-width: 45px
    height: 45px 
    border: 0 

    font-size: 14px
    line-height: 1.2
    background: color
    color: #fff
    font-weight: 700
    
button, .button, button.clear
    @extends $button

.button 
    &__icon 
        font-size: 20px

.button 
    &__filter
        position: fixed 
        bottom: 20px
        left: 20px 
        z-index: 50
        border-radius: 50%
        transition: all .2s ease-in-out
        opacity: 1 
        visibility: visible

        @media screen and (min-width 1024px)
            display none

    &__mask 
        position: fixed 
        top: 0 
        left: 0 
        z-index: 200
        width: 100% 
        height: 100% 
        background: rgba(0,0,0,.5)

    &__close
        position: fixed 
        right: 10px
        top: 0
        width: 45px
        height: 45px
        font-size: 25px
        background: none 
        color: #000

    &--menu
        background: #ffffff
        
@media (min-width: 992px) 
    .button
        cursor          : pointer
        cursor          : hand

        &--filter 
            visibility: hidden 
            opacity: 0