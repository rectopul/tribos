.attendance 

    &__header 
        display: flex

        svg
            width 24px
            height 19.7px
            fill: #797979
            margin-right 6px

    &__title
        margin-right 5px

    &__title , &__link, &__link--support
        display: inline-block        
        font-size 15px
        font-weight normal
        font-stretch condensed
        line-height 1.53 
        color: color[0]


    &__link
        font-size: 14px
        font-weight: 400
        color: #262323
        line-height: normal
        font-family: 'Montserrat', sans-serif;
        
        &--email,
        &--support
            font-size: 13px
            
        &:hover
            color: color[0]

        &--support
            color color[0]

    &__main
        div
            display: block
            margin-bottom 10px

            span
                font-size 13px
                line-height normal
                color #847E7E
                font-weight 200
                font-family: 'Montserrat', sans-serif;

            a
                font-family: 'Montserrat', sans-serif;
                
    &__whatsapp
        a
            white-space nowrap
        svg 
            width 12px
            height 12px 
            margin-right 5px

    &__span
        display: block
        font-size 14px
        font-weight normal
        font-stretch condensed
        line-height normal
        color color[0]


    &--header
        position relative
        
        .attendance 

            &__header
                display flex
                align-items: center
                min-height: 40px
                
                &--title, &--span
                    display: flex
                    align-items: center
                    font-size 13px
                    font-weight normal
                    line-height 15px
                    color #455454

                &--span
                    color: color

                &--title
                    svg
                        width  10px
                        height 10px 
                        margin-left: 3px
            
            &__content
                margin-top 24px

            &__link
                
                &--support , &
                    color #000000

            &__main
                position relative

                opacity 0
                visibility hidden

                position: absolute
                top: 100%
                left 50%
                transform: translateX(-50%)

                box-shadow: 0px 1px 8px #0000001A;
                background: #fff
                border-radius: 4px
                padding: 25px
                min-width 250px

    &--footer
        .attendance 
            &__header
                display: none

            &__content
                display: none
