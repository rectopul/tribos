.tabela-medidas
    display flex
    justify-content center

    position fixed
    top 0
    left 0
    background-color rgba(0, 0, 0, 0.5)
    width 100%
    height 100%
    z-index 99999998
    opacity 1
    padding 15px
    transform opacity 200ms linear

    &__title
        cursor pointer
        text-decoration underline
        font(Oswald, 14px, 700, $pinkish-red, 1.5, left)
        display none

        svg
            fill $pinkish-red
            width 20px
            height 12.5px

    &.hide
        opacity 0
        display none

    &__close
        position absolute
        right 10px
        top 10px
        cursor pointer

        &:hover
            svg
                fill $pinkish-red

        svg
            fill white
            width 20px
            height 20px

    &__fixed
        display flex
        width 100%
        background-repeat no-repeat
        background-position center
        background-size cover
        max-width 640px
        height 100%
        max-height: 542px
        position relative

