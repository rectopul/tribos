#modal-content
    width: 100% 

.modal-title
    background: rgba(0,0,0,.5)
    color: #fff 
    font-size: 14px
    font-weight: bold
    text-transform: uppercase 
    margin: -15px
    height 48px


.modal-footer:empty 
    display: none 


// modal gift
#modal-form-content
    .detalhesBrinde
        width auto

        h3
            text-align center

        .detalhes
            padding: 20px

            @media mobile 
                display block

        .botao
            position relative
            transition: opacity 222ms ease
            line-height 0

            > img
                opacity 0
                height 45px

            &:after
                content: 'Selecionar'
                font-size 16px
                line-height 45px
                height 45px
                width 100%
                text-align center
                color: #ffffff
                background #222222
                position: absolute
                top 0
                left: 0
                right 0
                bottom: 0
                margin: auto
                pointer-events: none

            @media desktop 
                &:hover
                    opacity: .5
