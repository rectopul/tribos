.modal-body
    width: 100%

.modal.fade 
    .modal-dialog
        max-width calc(100% - 15px)

.modal-header 
    position: relative 

    .close
        position: absolute 
        top: 0
        right: 0
        display: flex 
        justify-content: center 
        align-items: center 
        height: 100% 
        width 48px
        opacity .6
        text-shadow: unset
        color: #222
        font-size 35px
        transition: color 222ms ease

        @media desktop 
            &:hover
                color: #ff0000

