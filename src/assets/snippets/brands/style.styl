.brands
    text-align: center
    margin: 60px 0

    &__ul
        display: flex
        padding: 0 15px
        margin-top 15px

        @media desktop
            padding 0 50px
    &__item
        position relative

        &--1
            a
                align-items: flex-start

        &--3
            a
                align-items: flex-end

    &__image
        margin: 0 auto
        width auto
        max-width 100px
        filter: grayscale(0.5);
        opacity: 0.5;
        transition: all .2s ease-in-out

    &__span
        position: absolute
        font-size 18px
        opacity 0
        

    &__link
        min-height: 55px
        display: flex
        align-items: center

        &:hover
            img
                opacity 1
                transform scale(1.1)


    &__title
        font-size: 22px;
        font-weight: normal;
        line-height: normal;
        letter-spacing: -0.01px;
        color: #3c3c3c;  