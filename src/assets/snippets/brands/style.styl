.brands
    text-align: center
    margin: 60px 0

    &__ul
        display: flex
        padding: 0 15px/2
        margin-top 15px

    &__item
        position relative

    &__image
        margin: 0 auto
        width auto
        max-width 100%

    &__span
        position: absolute
        font-size 18px
        opacity 0
        

    &__link
        min-height: 50px
        display: flex
        align-items: center

        &:hover
            img
                opacity 1

    &__title
        font-size: 22px;
        font-weight: normal;
        line-height: normal;
        letter-spacing: -0.01px;
        color: #3c3c3c;

    @media desktop 
        .slick-next
            right -50px
        
        .slick-prev
            left: -50px
