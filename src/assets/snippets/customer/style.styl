.customer 
    &__container 
        display: flex 
        align-items: center

    &__main 
        padding: (30px/2) 0

    &__label
        a, span, &
            white-space: nowrap
            display: flex
            font-size: 12px
            font-weight: 500
            line-height: normal
            color: #403f3b

    &__link 
        font-size 14px
        font-weight normal
        line-height normal
        color color[0]

    &__links
        display: block
        
        a
            display: flex
            align-items: center
            justify-content: flex-start

            font-size 14px
            font-weight normal
            line-height 2.07
            color color[0]

            &:hover
                color: color[0]

    &__main 
        flex: 1 
        min-width: 0

    &__link 
        &--icon 
            display: flex 
            justify-content: center 
            align-items: center

            svg
                width 20px
                height 20px
                flex: 0 0 20px
                fill:   color[0]
                margin-right 5px
    &--header 
        .customer
            &__main 
                display: none 

    &--navigation  
        padding: 30px
        border-bottom: solid 1px rgba(0,0,0,.1)

        .customer__header
            display none

    @media (min-width: 992px)
    
        &--header 
            .customer
                &__main
                    display: block
                    position: absolute
                    top: 100%
                    left 50%
                    transform: translateX(-50%)

                    opacity 0 
                    visibility hidden

                    border-radius 3px
                    box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.05)
                    background-color #ffffff
                    padding: 25px 20px
                    min-width 170px

            &:hover
                .customer__main 
                    opacity 1
                    visibility visible
                
                .customer__link--icon
                    color: color[2]

                    svg
                        fill: color[2]
