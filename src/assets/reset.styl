*
    box-sizing      : border-box
    &:focus
        outline     : none !important

@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap');

html, body
    display         : block
    width           : 100%

    margin          : 0
    padding         : 0
    font-family     : 'Oswald', sans-serif

html
    border         : 0
    font-size      : 100%

body
    -webkit-font-smoothing     : antialiased
    -moz-osx-font-smoothing    : grayscale

div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, code, del, dfn, em, img, q, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, dialog, figure, footer, header, hgroup, nav, section
    margin            : 0
    padding           : 0
    border            : 0
    font-weight       : inherit
    font-style        : inherit
    font-size         : 100%
    font-family       : inherit
    vertical-align    : baseline

article, aside, dialog, figure, footer, header, hgroup, nav, section
    display           : block

table
    border-collapse   : separate
    border-spacing    : 0

caption, th, td
    text-align     : left
    font-weight    : normal
    float          : none !important

table, th, td
    vertical-align: middle

blockquote before, blockquote after, q before, q after
    content: ''

a img
    border: none

a
    text-decoration: none

    &:hover
        text-decoration: underline

img
    max-width: 100%
    height: auto

ul
    list-style: none
    margin: 0
    padding: 0

input, textarea, button, select
    outline: none
    box-shadow: none

&::placeholder
    &::focus
        color           : transparent

.banner-js
    margin: 0

main, footer 
    max-width: 100% 
    overflow: hidden

/**
 *  Reset Tray CSS
 */
#NavLogoTray
    max-width: 100%
    .timelogotray
        display: none 

.infobox 
    font-size: 10px
    span 
        font-size: 12px
    + .wrapper
        margin-top: 0

#sprite-svg
    display: none 

 

.fixed 
    height: 100% 
    overflow: hidden


.blocoAlerta, .message
    border: solid 1px #f00 
    background: #fff 
    font-size: 12px 
    text-transform: uppercase
    color: #f00
    margin: (30px / 2) 0

.board
    margin: 0
    padding: 10px 0

    h1, h2
        padding: 15px 0 
        font-size: 26px
        font-weight: bold 
        text-align: center 
        text-transform: uppercase
        border-bottom: solid 1px rgba(0,0,0,.05)

// Table Page
.tablePage 
    font-size: 13px
    th
        background: #fff
        font-size: 11px
        font-weight: bold 
        text-transform: uppercase 

    td 
        font-size: 13px 

        &:first-child 
            border-left: solid 1px #ccc

#Page 
    font-size: 13px 
    
    fieldset
        padding: 0 
        border: 0 
        background: none 

    .text
        height: 45px 
        line-height: 45px
        background: none 

#recommend-form
    #send_link button 
        padding: 0 15px

        &:before 
            content: 'Cadastrar'
        img 
            display: none 

.container3
    background: none 
    border: 0 

.container2
    background: none 

    .bottom
        display: none 

.container
    width: 100% 
    background: none 
    padding: 30px 0

.caixa-login .bt-efetua-login
    padding: 0 15px
    &:before 
        content: 'Efetuar login'

    img 
        display: none 

.caixa-cadastro .bt-efetua-login
    padding: 0 15px
    &:before 
        content: 'Cadastrar'

    img 
        display: none 

.tray-close
    min-width: 0

// Cadastro 
#CadastroAbas
    background: none 
    border: 0
    margin-bottom: 20px 

    ul 
        padding: 0
        display: flex 
        justify-content: flex-start 
        align-items: center 

    a, li
        background: none 

    a 
        display: inline-flex 
        justify-content: center 
        align-items: center 
        padding: 10px 20px 

    li 
        margin: 0 10px 0 0
        padding: 0
        float: none 

        &.aberta a
            background: rgba(0,0,0,.5)
            color: #fff
            font-size: 14px
            font-weight: regular 
            padding: 10px 20px 

#frm2
    br, .topBorder
        display: none 

    input 
        display: inline-block 
        vertical-align: middle
        
    label 
        padding: 10px 0
        display: block 
        font-size: 13px
        font-weight: bold 

#nao_disp a 
    &:before 
        content: 'OK'
    img 
        display: none 

#produto_nao_disp
    font-size: 14px 

abbr[title]
    border: 0

#botoes
    float: none 
    width: auto
    max-height: none
    padding: 0
    text-align: left

    .botao-commerce
        margin: 10px 

.botao-destaque, .botao-frete, .botao-indisponivel, .botao-lancamento
    &:before, &:after
        display:none

.botao-commerce-bullet-esq, .botao-commerce-bullet-dir
    display: none 

.botao-compre-junto .botao-commerce-img, .botao-compre-negociar .botao-commerce-img, .botao-escolher .botao-commerce-img, .botao-negociar .botao-commerce-img, .botao-ok-negociar .botao-commerce-img
    background: none 
    padding: 0

hr 
    visibility:  hidden

#produto_comprar
    > a 
        display: inline-block 
        padding: 10px 15px 
        font-size: 14px
        font-weight: regular 
        text-transform: uppercase 
        background: rgba(0,0,0,.5)
        color: #fff
        &:before 
            content: 'Comprar '
        img  
            display: none 

#listaNoticiaProdutos
    margin: 0

    li
        border-bottom: solid 1px rgba(0,0,0,.05)



svg
    width 30px
    height 30px


body
    .whatsapp
        @media screen and (max-width 992px)
            bottom 8%

