#visualAbas, #visualBlock #add, .bonus_produto:empty
    display: none 

#col3D, #colFotos, #colVideo, #foto_p, #preco, .prodBox, .onVar, .onVar:hover
    background: none 
    border: 0


.modal
    @media screen and (max-width 992px)
        z-index 999999999999


.cor_variacao.passo2
    display flex
    flex-wrap wrap

    .texto_variacao
        flex 0 0 100%

    > ul
        display flex
        flex 0 0 auto
        min-width 1px
        width initial

    .tabela-medidas__title
        flex 0 0 auto
        display flex
        align-items center
        margin-left 50px

.varTit
    padding: 5px 0

    &, &:hover
        font-size: 14px
        font-weight: reuglar 
        color: #333
        background: none 

.precoCompreJunto
    border: 0

.varCont
    padding: 5px 0
    border: 0
    
#preco
    border: 0 
    padding: 0

    .txt-por,
    .barra_cada
        display none

    .PrecoPrincipal
        font(Oswald, 14px, 300, #807b7c, 1.5, left)
        text-decoration: line-through

#info_preco

    .precoAvista
        font(Oswald, 30px, 700, $pinkish-red, 1.5, left)
        

    .txt-avista,
    .txt-com-desconto,
    .txt-forma-pagamento,
    .operadora
        display none

    .preco-parc2
        font-size 0

        strong
            font(Oswald, 20px, 300, $black, 1.5, left)

    .preco-de
        font(Oswald, 20px, 300, $black, 1.5, left)  
        margin 0 5px

    .txt-cadaparcelas
        .preco-parc2
            font(Oswald, 20px, 300, $black, 1.5, left)



    /*
    font-family Oswald
  font-size 20px
  font-weight 300
  font-stretch normal
  font-style normal
  line-height 1.5
  letter-spacing normal
  text-align center
  color $black  */

#linkPagParcelado
    display: inline-block 
    padding: 10px 20px
    border: 0
    font-size: 14px
    font-weight: regular 
    background: rgba(0,0,0, .5)
    color: #ffffff

#bloco-add-lista 
    margin: 0
    border: 0
    a
        display: flex 
        justify-content: center 
        align-items: center
        height: 30px
        padding: 5px
        border: solid 1px rgba(0,0,0,.1)
        font-size: 10px
        font-weight: regular
        text-transform: uppercase

#cepbox
    margin: 0
    padding: 10px 0 20px
    border: 0
    display flex
    font-size 0
    
    input 
        display: inline-block 
        vertical-align: middle
        width 85px
        margin 0 5px
        border solid 1px $reddish-grey

        &#cep2
            width 53px

    label 
        display: none 

    .cepbox-text
        font-size: 0
        text-transform: uppercase 
        padding: 10px 0
        margin-right 8px
        

        &:before
            content 'Calcular frete'
            font(Oswald, 18px, 700, $black, 1.44, left)

    .botao-simular-frete
        display: inline-flex 
        justify-content: center 
        align-items: center 
        vertical-align: middle
        width: 80px
        height: 45px
        margin-top: -2px
        margin-left: 10px   
        background none
        background-color $black !important
        font-size: 0 
        border: 0
        border-radius: 0
        &:before 
            font(Oswald, 16px, 400, #ffffff, 1, center)
            text-transform capitalize
            content: 'Calcular'

.botao-comprar 
    width: 100% 

    .botao-commerce-img
        background: none 
        width: 100% 
        height: 45px 
        padding: 0

#nao_disp
    padding: (30px / 2)
    border: solid 1px rgba(0,0,0,.05)

    h5 
        margin: 20px 0 0 
        font-size: 14px
        font-weight: bold 
        text-transform: uppercase 

.page-product 
    .main__container
        padding: 0 15px
    &__labels 
        width 100%
        display: flex 
        padding: 10px 0
        position absolute
        top 15px
        left 0
        z-index 1
        justify-content center

        @media screen and (min-width 1024px)
            width initial
            flex-direction column
            right 20px
            left auto
            top 0
            justify-content flex-start
        

        #botoes 
            margin: -10px
            display: flex 
            min-width 1px
            justify-content center

            @media screen and (min-width 1024px)
                flex-direction column
                justify-content flex-start
                margin initial

            > span
                flex 0 0 33.32%
                background none !important
                border 1px solid
                display flex
                align-items center
                justify-content center
                height 25px
                font(Oswald, 13px, 400, #88c710, 1, center)
                letter-spacing 1.04px
                margin-left 10px
                margin-right 10px
                min-width 1px
                width initial

                @media screen and (min-width 1024px)
                    flex initial
                    width 109px
                

                &.botao-frete
                    border-color #90c401

                &.botao-lancamento
                    border-color #f8b929
                    color #f8b929

                &.botao-destaque
                    border-color $pinkish-red
                    color $pinkish-red

                    //$pinkish-red

    &__details 
        #info 
            display none

            a
                font-family Oswald
                font-size 14px
                font-weight 300
                font-stretch normal
                font-style normal
                line-height 1.5
                letter-spacing normal
                text-align left
                color $reddish-grey
                border 0
                text-decoration underline
                display inline-block

                &:hover
                    background none
                    color #000

    &__image 
        position: relative 
        z-index: 10

        // Ajuste Zoom

        .produto-zoom-detalhe
            display none

        #colFotos
            display flex
            flex-wrap wrap

            #foto_p
                margin-top 50px
                @media screen and (min-width 993px)
                    margin-top initial

                    a.container_thumb
                        
                        min-height 500px

                        &, img
                            max-width 400px !important
                            max-height 400px !important

            > .produto-zoom-detalhe
                flex 0 0 100%

            > .thumbs
                flex 0 0 100%

                @media screen and (min-width 993px)
                    flex 0 0 95px

            > .produto-imagem 
                flex 1
                min-width 1px

                z-index 0 !important


        #wrap
            position: relative

        #cloud-zoom-big 
            z-index: 100!important
            min-width: 100% 
            min-height: 100%
            left: 0 !important
            margin-left: 0 !important
            background-color: #fff

    &__name 
        padding-bottom: 15px
        text-transform uppercase
        font(Oswald, 24px, 700, $black, 1.5, left)

    &__head 
        display: flex 
        justify-content: space-between
        font-size: 14px
        padding: 10px 0

    &__links 
        display: flex 
        flex-flow: row wrap
        margin: 10px -5px

        &-item
            flex: 1 1 50%
            padding: 5px

            a 
                display: flex 
                justify-content: center 
                align-items: center
                height: 30px
                padding: 5px
                border: solid 1px rgba(0,0,0,.1)
                font-size: 10px
                text-transform: uppercase

            &--compare 
                input 
                    display: none 

    &__actions 
        .passo1, #product-form-box
            display: flex 

        #product-form-box
            width: 100% 

        #quantidade 
            font-size: 0 
            padding: 0 
            margin: 0 (30px / 2) 0 0
            border: 0
            max-width: 100px
            flex: 0 0 auto

            label
                display flex
                align-items center
                height 50px
                padding 10px 19px
                border solid 1px #707070

                .minus
                    order 0

                .plus
                    order 2

                input
                    order 1
                    border 0
                    font(Oswald, 20px, 700, $black, 1, center)

                > div
                    display flex
                    font(Oswald, 20px, 700, $black, 1, center)
                    cursor pointer

                    &:hover
                        color $pinkish-red


        #quant
            width: 100% 
            font-size: 14px
            text-align: center

        #bt_comprar
            flex: 1
            max-width 420px
            min-width: 0
            height 50px
            background-color #90c401
            background-image none !important
            font(Oswald, 20px, 700, white, 1, center)

        #button-buy
            background-image none !important
            background-color transparent !important
            border 0 !important

            span
                font-size 0
                &:before
                    font-size 20px
                    content 'ADD AO CARRINHO'

.texto_variacao
    display: flex 
    padding: 0 

    font(Oswald, 14px, 700, $black, 1.5, left)

    h2, span
        float: none 
        width: auto
        margin-right: 5px
        font(Oswald, 14px, 700, $black, 1.5, left)

    h2:after 
        content: ': '

.lista_cor_variacao
    padding: 10px 0 

    li
        border solid 1px #c8d7d7
        display inline-block
        min-height 1px
        width 50px
        height 50px

        > div
            width 100%
            height 100%
            border 0 !important
            display flex
            justify-content center
            align-items center
            background-color transparent !important

            font(Oswald, 14px, 700, $reddish-grey, 1.5, center)

        img
            width 50px
            height 50px
    
.lazy
    width: auto

@media (min-width: 992px) 
    .page-product 
        &__essential 
            display: grid
            grid-template-areas: "image header" "image details"
            grid-template-columns: 1fr 50%
            grid-template-rows: auto 1fr

        &__image 
            grid-area: image 

        &__header 
            grid-area: header 
            
        &__details 
            grid-area: details

.thumbs
    max-width 100%
.thumbs__list

    .slick-arrow
        width 24.3px
        height 29.6px
        padding 0
        font-size 29px

        &:hover
            span
                &, &:before
                    color $pinkish-red

        &.slick-prev
            @media screen and (min-width 1024px)
                top 20px

        &.slick-next
            transform rotate(-180deg)
            @media screen and (min-width 1024px)
                top calc(100% - 20px)
                transform rotate(-90deg)
    

.related-title
    font(Oswald, 45px, 300, $black, 1.49, center)
    display flex
    justify-content center
    align-items center
    flex-direction column
    text-transform capitalize

    &:before
        content 'Você vai gostar'
        font(Montserrat, 15px, 400, $reddish-grey, 1.27, center)

.product-tabs

    &.product-tabs--line.small
        width 100%
        max-width 1300px
        padding 0 15px
        margin 70px auto

        p, span
            font(Montserrat, 16px, 400, $black, 1.38, left)
    
    &, &__title

        h3
            font(Oswald, 45px, 300, $black, 1.49, center)

    .board
        .comments
            width 100%
            max-width: 1300px
            margin 0 auto
            padding 0 15px
            margin-bottom 100px

            a[data-logged-user]
                width 264px
                height 46px
                margin 0 auto
                padding 14px 35px
                border solid 1px #d1d1d1
                background-color #ffffff
                display block

                font(Montserrat, 14px, 300, $reddish-grey, 1.29, center)

                &:hover
                    background-color $reddish-grey
                    color #fff


            > h2
                font-size 0
                position relative
                display flex
                justify-content center
                align-items center
                flex-direction column
                border-bottom 0
                &:after
                    content 'Avaliações de Clientes'
                    font(Oswald, 45px, 300, $black, 1.49, center)
                    text-transform capitalize
                &:before
                    content 'Veja o que dizem sobre nós'
                    font(Montserrat, 15px, 400, $reddish-grey, 1.27, center)


    &__tab

        &[aria-controls="tab-description"],
        &[aria-controls="tab-comments"]

            display none

.product-description

    &__description
        width 100%
        max-width: 1300px
        margin 0 auto
        padding 0 15px

        p

            font(Montserrat, 16px, 400, $black, 1.38, left)

        h1

            font(Oswald, 25px, 700, $black, 1.48, left)
            margin-bottom 30px
            border-bottom 0


    &__variation
        h1
            font(Oswald, 25px, 700, $black, 1.48, left)
            width 100%
            max-width 1300px
            margin 0 auto
            padding 0 15px
            border-bottom 0

        img
            margin-top 35px


    &__characteristic
        display flex
        margin-top 40px

        &--image
            flex 0 0 530px
            order 2

        &--text
            flex 1
            order 0

            h1

                font(Oswald, 25px, 700, $black, 1.48, left)
                margin-bottom 30px
                border-bottom 0

            ul
                font(Montserrat, 14px, 400, $black, 2.14, left)
                list-style-type: circle
                padding-left 20px

        

    &__header
        height 350px
        display flex
        position relative
        justify-content center
        align-items center

        h1
            font(Oswald, 45px, 700, #ffffff, 1.48, left)
            z-index 2

        img
            position absolute
            width 100%
            height 350px
            top 0
            left 0
            z-index 0