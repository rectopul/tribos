.summary
    
    &__total
        
        &--submit
            flex 0 0 100%
            display flex
            height 50px
            background-color #90c401
            align-items center
            justify-content center
            font(Oswald, 16px, 700, #ffffff, 1, left)
            text-transform uppercase
            margin-top 30px

.tool
    &__container
        display flex
        flex-direction column
        margin-top 25px
        margin-bottom 25px


    &__variantsType
        
        &-Cor
            font-size 0 !important
            width 26px
            height 26px

    &__variants
        &--wrapper
            flex 0 0 100%
            display flex
            flex-direction column


        &--item
            display flex
            margin-bottom 10px

            h4
                flex 0 0 80px
                margin-right 8px
                text-transform uppercase

                font(Montserrat, 14px, 400, $black, 1.29, left)

        &--list
            flex 1
            display flex
            margin-left -5px
            margin-right -5px
            flex-wrap wrap

            > li
                margin 0 5px
                margin-bottom 5px

            span
                display flex
                padding 3px 5px
                min-width 100%
                min-height 100%
                border 1px solid rgba(0,0,0,.3)
                background-size cover
                background-position center center


.toolCategory
    display flex
    padding-top 0
    padding-bottom 0
    height 183px
    max-height 183px

    &:last-child
        height initial
        max-height initial
        .toolCategory__column
            &.products
                height initial

            &.variations
                border-bottom 0
        
    &__column

        h2
            font(Oswald, 18px, 700, $pinkish-red, 1.44, left)
            text-transform uppercase
            margin-bottom 15px

        &--summary
            background-color #ffffff
            padding 15px
            height 100%

            &--total
                display flex
                justify-content center
                flex-wrap wrap
                align-items center
                font(Montserrat, 14px, 500, $black, 1.29, center)
                text-transform uppercase

                .price__total
                    font(Oswald, 22px, 700, $pinkish-red, 1, center)
                    text-transform uppercase
                    margin-left 8px
                    display inline-block
                    margin-top -5px

            &.removed
                background-color transparent

                article
                    opacity .4

            label
                margin-right 8px
                width 15px
                height 15px
                border-radius 2px
                border solid 1px #707070
                background-color #ffffff
                position relative
                cursor pointer

                &:hover
                    border-color $pinkish-red

            h3
                font(Montserrat, 13px, 300, $black, 1.23, left)
                text-transform uppercase
                
            article
                display flex

            figure
                margin-right 13px

            header
                display flex
                align-items center
                margin-bottom 15px
                
                input
                    display none
                    &:checked + label
                        &:before
                            content ''
                            width 9px
                            height 9px
                            border-radius 1px
                            background-color $pinkish-red
                            position absolute
                            left 50%
                            top 50%
                            margin-left -4.5px
                            margin-top -4.5px

        &.summary
            flex 0 0 310px
            min-width 1px
            padding 10px 15px
            background-color #f7fafa


        &.products
            flex 1
            display flex
            min-width 1px
            margin 0 25px
            height 180px
            max-height 180px
            align-items center
            overflow hidden

            .showcase
                width 100%
                margin 0

                .slick-arrow

                    width 29.6px
                    height 24.3px
                    background-color transparent
                    padding 0

                    &:before
                        content none

                    span
                        font-size 29.6px

                    &:hover
                        span
                            &:before
                                color $pinkish-red
                    
                    &.slick-prev 
                        left 150px

                    &.slick-next 
                        right 150px

                        span
                            transform rotate(180deg)


            .product__figure
                width 130px
                margin 0 auto !important
                padding 0
                transition all 300ms linear
                min-height initial
                

            .product__header
                margin-bottom 0

                &:not(.slick-center)
                    opacity 0.2


                    .product__figure
                        padding 15px
                        margin-right auto !important
                        margin-left 0 !important
                        img
                            max-width 80px

                &.slick-current

                    ~ .product__header
                        .product__figure
                            margin-right 0 !important
                            margin-left auto !important

        &.variations
            flex 0 0 310px
            min-width 1px
            width initial
            display flex
            flex-direction column
            border-bottom 1px solid #dcebeb
            margin-bottom 25px

            &.disabled
                opacity .2

        &--variations
            display flex
            overflow hidden