            &-scroll 
                width: 100%
                height: 100% 
                padding: (30px / 2)
                overflow-y: auto


@media (min-width: 992px) 
    .page-catalog 
        &__left 
            padding: 0 (30px / 2)

            .button__mask 
                display: none 

        &__filters 
            position: static

        &__toolbar
            &--top 
                position: relative 
                margin-bottom: 60px 
                .paginate__pages
                    position: absolute 
                    right: 0 
                    top: 100% 
            &--bottom 
                .paginate__container 
                    display: flex 
                    justify-content: space-between
                    align-items: center 