/**
 *  Settings Global do CSS (Stylus)
 *  - Essas Configurações são chamados em todos arquivos styles 
 *  - Não se deve inserir estruturas css, é permitido somente variaves e funções
 */

$pinkish-red = #e02a31
$black = #262323
$reddish-grey = #847e7e
$light-red = #fd4148
$beige = #d0c5c5
$mid-green = #4caf50
$white = #fafafa

// Placeholder
$button 
    display: inline-block 
    padding: 13px 15px
    border-radius: 0

    font-size: 14px
    font-weight: regular

    background: rgba(0,0,0,.5)
    color: #fff

    &:hover 
        text-decoration: none 

font($font-family, $font-size, $font-weight, $color, $line-height, $text-align)
   font-family $font-family
   font-size $font-size
   font-weight $font-weight
   font-stretch normal
   font-style normal
   line-height $line-height
   color $color
   text-align $text-align


// mixins
container(args...) 
    width: 100%
    max-width: args 
    padding: 0 (30px/2)

icon(args...)
    content: args
    font-family: "Font Awesome 5 Free"
    font-weight: 900

// keyframes
@keyframes slideOpen
    0% 
        transform: translate3d(-100%, 0, 0)
    50% 
        transform: translate3d(0, 0, 0)

@keyframes slideOpenButton 
    0%, 50%
        opacity: 0 
    100% 
        opacity: 1

@keyframes slideClose
    0%, 50% 
        transform: translate3d(0, 0, 0)
    100% 
        transform: translate3d(-100%, 0, 0)

@keyframes slideCloseButton 
    0%
        opacity: 1
    50%, 100%
        opacity: 0

desktop = unquote("screen and (min-width: 992px)")
mobile = unquote("screen and (max-width: 991px)")

color = #47c4c0
transition = all .2s ease-out