.filter 
    font-size: 14px

    &__item
        position: relative 
        padding: 3px 0


    &__input 
        position: absolute 
        opacity: 0

    &__list
        max-height 0
        overflow hidden

    &__block 
        min-height: 50px
        &.show

            .filter
                
                &__title
                    &:after 
                        content '-'
                &__list
                    max-height initial
                    

    &__title 
        text-transform: capitalize 
        padding: 16px 0 10px
        display flex
        justify-content space-between
        font(Oswald, 16px, 400, $black, 1.56, left)

        

        &:after
            content '+'
            font(Oswald, 22px, 500, $black, 1.14, right)
            display inline-block
            cursor pointer

        

    &__name 
        margin-right: 3px
        font(Montserrat, 13px, 400, $black, 1.92, left)

    &__count 
        font-size: 12px
        font-weight: regular 
        color: rgba(0,0,0,.5)

    &__label 
        display: flex 
        justify-content: flex-start 
        align-items: center
        cursor: pointer
        
        &:before 
            content: ''
            display: flex 
            justify-content: center 
            align-items: center
            width: 16px
            height: 16px 
            margin-right: 3px
            border: solid 1px rgba(0,0,0,.5)
            border-radius: 3px
            font-size: 10px

    &__input:checked
        + .filter 
            &__label:before 
                background #E02A31
                padding 4px
                box-shadow inset 0px 0px 0px 2px #fff
    &__actions
        padding: 20px 0

    &__button 
        width: 100%
        background #E02A31
